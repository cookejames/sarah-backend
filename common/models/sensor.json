{
  "name": "sensor",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "isEnabled": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "readings": {
      "type": "hasMany",
      "model": "reading",
      "foreignKey": "sensorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": []
}
